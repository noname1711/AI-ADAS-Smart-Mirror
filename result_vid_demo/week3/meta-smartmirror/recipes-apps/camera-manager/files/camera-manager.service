[Unit]
Description=Touchscreen Dual Camera Viewer
After=graphical.target systemd-logind.service
Wants=graphical.target

[Service]
Type=simple
Environment=DISPLAY=:0
ExecStartPre=/bin/sh -c 'sleep 3; until [ -e /dev/video0 ]; do sleep 1; done; until [ -e /dev/video1 ]; do sleep 1; done'
ExecStart=/usr/bin/camera-manager
Restart=always
RestartSec=3

[Install]
WantedBy=graphical.target
